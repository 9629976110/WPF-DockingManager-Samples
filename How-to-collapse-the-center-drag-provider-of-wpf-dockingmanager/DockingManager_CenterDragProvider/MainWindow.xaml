<Window xmlns:syncfusion="http://schemas.syncfusion.com/wpf"  x:Class="DockingManager_CenterDragProvider.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DockingManager_CenterDragProvider"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <syncfusion:DockingManager Name="docking" UseDocumentContainer="True" >
            <ContentControl syncfusion:DockingManager.Header="Dock1" syncfusion:DockingManager.DesiredWidthInDockedMode="200"/>
            <ContentControl syncfusion:DockingManager.Header="Dock2" syncfusion:DockingManager.SideInDockedMode="Right" syncfusion:DockingManager.DesiredWidthInDockedMode="200"/>
            <ContentControl syncfusion:DockingManager.Header="Dock3" syncfusion:DockingManager.SideInDockedMode="Bottom" syncfusion:DockingManager.DesiredHeightInDockedMode="200"/>
            <ContentControl syncfusion:DockingManager.Header="Document Tab" syncfusion:DockingManager.State="Document"/>
        </syncfusion:DockingManager>
    </Grid>
</Window>
